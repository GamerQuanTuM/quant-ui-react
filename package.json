{
  "name": "quant-ui-react",
  "description": "Simple component library based on shadcn-ui and typescript",
  "version": "1.1.8",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/style.css",
  "scripts": {
    "dev": "vite --host --port 3000",
    "build": "tailwindcss -i ./src/index.css -o ./dist/styles.css && tsup src/index.tsx --format esm,cjs --dts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "author": "Shuvam Santra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GamerQuanTuM/quant-ui-react"
  },
  "bugs": {
    "url": "https://github.com/GamerQuanTuM/quant-ui-react/issues"
  },
  "homepage": "https://github.com/GamerQuanTuM/quant-ui-react#readme",
  "keywords": [
    "shadcn-ui",
    "tailwindcss"
  ],
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.3.0",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "tsup": "^6.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}